script Common_Eventscript_Sample_Sets_Shop {
    lock
    faceplayer
    msgbox(format("Hello and welcome to the Sample Sets Shop!"))
    goto(Common_Eventscript_Sample_Sets_ShopCheckMoney)
}

script Common_Eventscript_Sample_Sets_ShopCheckMoney {
    showmoneybox(18, 0)
    checkmoney(15000)
    if (var(VAR_RESULT) == TRUE) {
        goto(Common_EventScript_Sample_Sets_Shop_Controls)
    }
    else # Player does not have enough money
    {
        msgbox(format("Oh, sorry! You need at least ¥15000 to buy anything here!"))
        goto(Common_EventScript_Sample_Sets_Shop_End)
    }
}

script Common_EventScript_Sample_Sets_Shop_Controls
{
  msgbox("L: Previous Page                    R: Next Page\nB: Go Back")
  goto(Common_EventScript_Sample_Sets_Shop_Page1)
}

script Common_Eventscript_Sample_Sets_ShopCheckPurchase {
    msgbox(format("Sure! Let's see if I can handle that for you ..."))
    switch(var(VAR_RESULT)){
        case MON_GIVEN_TO_PARTY:
            playse(SE_SUCCESS)
            msgbox(format("Here you go!"))
            msgbox(format("The POKéMON have been added to your party."))
            waitse
        case MON_GIVEN_TO_PC:
            playse(SE_SUCCESS)
            msgbox(format("All done!"))
            msgbox(format("The POKéMON have been sent to your PC boxes."))
            waitse
        case MON_CANT_GIVE:
            playse(SE_FAILURE)
            msgbox(format("It looks like I can't give you any more POKéMON right now - Sorry!"))
            waitse
            goto(Common_EventScript_Sample_Sets_Shop_End)
    }
    msgbox(format("I'll take your payment now, please."))
    removemoney(15000)
    updatemoneybox
    playse(SE_SHOP)
    waitse
    msgbox(format("Thanks for your business!"))
    msgbox(format("Can we help you with anything else?"))
    yesnobox(0, 8)
    if (var(VAR_RESULT) == YES){
        goto(Common_Eventscript_Sample_Sets_ShopCheckMoney)
    }
    goto(Common_EventScript_Sample_Sets_Shop_End)
}

script Common_EventScript_Sample_Sets_Shop_End {
    msgbox(format("Come back again soon!"))
    hidemoneybox
    releaseall
    end
}

