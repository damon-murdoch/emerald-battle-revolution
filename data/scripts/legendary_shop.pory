script LegendaryShopCommon_EventScript_LegendaryShop {
    lock
    faceplayer
    msgbox(format("Welcome to the one-and-only legendary POKéMON shop!"))
    goto(LegendaryShopCommon_EventScript_LegendaryShopCheckMoney)
}

script LegendaryShopCommon_EventScript_LegendaryShopCheckMoney {
    showmoneybox(18,0)
    checkmoney(12000)
    if (var(VAR_RESULT) == TRUE){
        goto(LegendaryShopCommon_EventScript_LegendaryShopCheckGoldBottleCap)
    }
    else # Player does not have enough money
    {
        msgbox(format("Oh, sorry! You need at least ¥12000 to buy anything here!"))
        goto(LegendaryShopCommon_EventScript_LegendaryShopEnd)
    }
}

script LegendaryShopCommon_EventScript_LegendaryShopCheckGoldBottleCap {
    checkitem(ITEM_GOLD_BOTTLE_CAP)
    if (var(VAR_RESULT) == TRUE) {
        msgbox(format("Oh, you have a gold bottle cap! Would you redeem it for a shiny Pokemon?"))
        yesnobox(0, 8)
        if (var(VAR_RESULT) == TRUE) {
            clearflag(P_FLAG_FORCE_NO_SHINY)
            setflag(P_FLAG_FORCE_SHINY)
        }
        else {
            setflag(P_FLAG_FORCE_NO_SHINY)
            clearflag(P_FLAG_FORCE_SHINY)
        }
    }
    else {
        setflag(P_FLAG_FORCE_NO_SHINY)
        clearflag(P_FLAG_FORCE_SHINY)
    }

    msgbox(format("What are you looking for today?"))
    msgbox("L: Previous Page                    R: Next Page\nB: Go Back")
    goto(LegendaryShopCommon_EventScript_LegendaryShopRegions1)
}

