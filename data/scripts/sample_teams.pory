script Common_Eventscript_Sample_Team_Shop {
    lock
    faceplayer
    msgbox(format("Hello and welcome to the Sample Team Shop!"))
    goto(Common_Eventscript_Sample_Team_ShopCheckMoney)
}

script Common_Eventscript_Sample_Team_ShopCheckMoney {
    showmoneybox(18, 0)
    checkmoney(30000)
    if (var(VAR_RESULT) == TRUE) {
        goto(Common_EventScript_Sample_Team_Shop_Controls)
    }
    else # Player does not have enough money
    {
        msgbox(format("Oh, sorry! You need at least ¥30000 to buy anything here!"))
        goto(Common_EventScript_Sample_Team_Shop_End)
    }
}

script Common_EventScript_Sample_Team_Shop_Controls
{
  msgbox("L: Previous Page                    R: Next Page\nB: Go Back")
  goto(Common_EventScript_Sample_Team_Shop_Page1)
}

script Common_Eventscript_Sample_Team_ShopCheckPurchase {
    msgbox(format("Sure! Let's see if I can handle that for you ..."))
    switch(var(VAR_RESULT)){
        case MON_GIVEN_TO_PARTY:
            playse(SE_SUCCESS)
            msgbox(format("Here you go!"))
            msgbox(format("The POKéMON have been added to your party."))
            waitse
        case MON_GIVEN_TO_PC:
            playse(SE_SUCCESS)
            msgbox(format("All done!"))
            msgbox(format("The POKéMON have been sent to your PC boxes."))
            waitse
        case MON_CANT_GIVE:
            playse(SE_FAILURE)
            msgbox(format("It looks like I can't give you any more POKéMON right now - Sorry!"))
            waitse
            goto(Common_EventScript_Sample_Team_Shop_End)
    }
    msgbox(format("I'll take your payment now, please."))
    removemoney(30000)
    updatemoneybox
    playse(SE_SHOP)
    waitse
    msgbox(format("Thanks for your business!"))
    msgbox(format("Can we help you with anything else?"))
    yesnobox(0, 8)
    if (var(VAR_RESULT) == YES){
        goto(Common_Eventscript_Sample_Team_ShopCheckMoney)
    }
    goto(Common_EventScript_Sample_Team_Shop_End)
}

script Common_EventScript_Sample_Team_Shop_End {
    msgbox(format("Come back again soon!"))
    hidemoneybox
    releaseall
    end
}

script Common_EventScript_Sample_Team_Shop_Page1
{
  multichoice2(0,0,Common_Text_Sample_Team_Shop_Page1)
  switch(var(VAR_RESULT))
  {
    case 0:
      goto(Common_EventScript_Sample_Team_Shop_Singles3v3_Page1)
    case 1:
      goto(Common_EventScript_Sample_Team_Shop_Doubles3v3_Page1)
    case 2:
      goto(Common_EventScript_Sample_Team_Shop_Doubles4v4_Page1)
    case MULTI_L_PRESSED:
      goto(Common_EventScript_Sample_Team_Shop_Page1)
    case MULTI_R_PRESSED:
      goto(Common_EventScript_Sample_Team_Shop_Page1)
    default:
      goto(Common_EventScript_Sample_Team_Shop_End)
  }
}

