script BattleFrontierController_EventScript_ControllerMusicSelectSuccess {
	playse(SE_SUCCESS)
	msgbox(format("All done! Your music selection has been changed."))
	waitse
	goto(BattleFrontierController_EventScript_ControllerMusicSelectEnd)
}

