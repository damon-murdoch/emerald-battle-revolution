script LilycoveCity_DepartmentStore_3F_EventScript_ClerkRight {
	lock
	faceplayer
	message(gText_HowMayIServeYou)
	waitmessage


	// Player has defeated champion
	if (flag(FLAG_IS_CHAMPION)){
		// Stat modifiers, including level up / exp. items
		pokemart(LilycoveCity_DepartmentStore_3F_Pokemart_StatModifiers_Expanded)
	}
	else // Player is not champion
	{
		// Stat modifiers, including nature mints
		pokemart(LilycoveCity_DepartmentStore_3F_Pokemart_StatModifiers)
	}

	msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
	release
	end
}

